@model TesteCMS.Models.Textos
@{
    ViewBag.Title = "ConfiguraTxtHome";
}

<h2>Textos Home</h2>
@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(c => c.Local)
        @Html.DropDownListFor(c => c.Local, ViewBag.local as SelectList, "Selecione", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Texto)
        @Html.TextAreaFor(c => c.Texto, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <input type="submit" value="Salvar" />
    </div>
}
